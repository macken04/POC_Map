# Server Configuration
NODE_ENV=development
PORT=3000
SESSION_SECRET=your-secure-session-secret-min-32-chars

# Strava API Configuration
# Register your app at: https://www.strava.com/settings/api
STRAVA_CLIENT_ID=your_strava_client_id
STRAVA_CLIENT_SECRET=your_strava_client_secret
STRAVA_REDIRECT_URI=https://your-ngrok-url.ngrok-free.app/auth/strava/callback

# Mapbox Configuration
# Get token at: https://account.mapbox.com/access-tokens/
MAPBOX_ACCESS_TOKEN=pk.your_mapbox_access_token

# Shopify Configuration
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_SECRET_KEY=your_shopify_secret_key
SHOPIFY_STORE_URL=https://your-store.myshopify.com

# Development Configuration
NGROK_URL=https://your-ngrok-url.ngrok-free.app

# CORS Configuration - CRITICAL for Shopify integration
# Include: localhost, ngrok URL, Shopify store URL, and admin.shopify.com
ALLOWED_ORIGINS=http://localhost:3000,https://your-ngrok-url.ngrok-free.app,https://your-store.myshopify.com,https://admin.shopify.com

# Cache Configuration
CACHE_ENABLED=true
CACHE_MAX_SIZE=1000
CACHE_CLEANUP_INTERVAL=300000
CACHE_COMPRESSION=true
CACHE_WARMUP_ENABLED=true
CACHE_TTL_ACTIVITIES=300000
CACHE_TTL_ACTIVITY_DETAILS=3600000
CACHE_TTL_ACTIVITY_STREAMS=86400000
CACHE_TTL_ATHLETE=900000

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev

# Puppeteer Configuration
PUPPETEER_HEADLESS=true

# Map Export Configuration
MAP_EXPORT_TIMEOUT=60000
MAP_QUALITY=300
