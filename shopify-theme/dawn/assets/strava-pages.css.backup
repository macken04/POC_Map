/**
 * Strava Integration Pages Styles
 * Comprehensive styling for strava-login and activity-selector pages
 * 
 * Built for Shopify Dawn theme with responsive design
 * Uses Dawn's CSS custom properties for consistency
 */

/* ==========================================================================
   Base Strava Page Styles
   ========================================================================== */

.strava-page-heading {
  font-size: 2.5rem;
  font-weight: 600;
  color: rgb(var(--color-foreground));
  margin-bottom: 1rem;
  text-align: center;
}

.strava-page-description {
  font-size: 1.125rem;
  color: rgba(var(--color-foreground), 0.75);
  text-align: center;
  margin-bottom: 2.5rem;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
  line-height: 1.6;
}

/* ==========================================================================
   Button Styles
   ========================================================================== */

.strava-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  padding: 0.75rem 1.5rem;
  border: none;
  border-radius: 6px;
  font-size: 1rem;
  font-weight: 600;
  text-decoration: none;
  cursor: pointer;
  transition: all 0.2s ease;
  white-space: nowrap;
  line-height: 1;
}

.strava-btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
  transform: none !important;
}

.strava-btn .btn-icon {
  width: 1rem;
  height: 1rem;
  flex-shrink: 0;
}

/* Button Variants */
.strava-btn-primary {
  background: var(--color-brand-primary);
  color: var(--text-inverse);
  box-shadow: var(--shadow-brand);
}

.strava-btn-primary:hover {
  background: var(--color-brand-primary-dark);
  transform: translateY(-1px);
  box-shadow: var(--shadow-brand-lg);
}

.strava-btn-success {
  background: var(--color-success);
  color: var(--text-inverse);
  box-shadow: var(--shadow-sm);
}

.strava-btn-success:hover {
  background: var(--color-success-dark);
  transform: translateY(-1px);
  box-shadow: var(--shadow-md);
}

.strava-btn-secondary {
  background: var(--color-gray-500);
  color: var(--text-inverse);
  box-shadow: var(--shadow-sm);
}

.strava-btn-secondary:hover {
  background: var(--color-gray-600);
  transform: translateY(-1px);
  box-shadow: var(--shadow-md);
}

.strava-btn-link {
  background: transparent;
  color: var(--color-gray-500);
  box-shadow: none;
  padding: var(--space-2) var(--space-2);
}

.strava-btn-link:hover {
  color: var(--color-gray-700);
  text-decoration: underline;
}

.strava-btn-large {
  padding: 1rem 2rem;
  font-size: 1.125rem;
}

/* ==========================================================================
   Login Page Styles
   ========================================================================== */

.strava-login-container {
  max-width: 800px;
  margin: 0 auto;
  padding: 2rem 1rem;
}

/* Auth Status Card */
.strava-auth-card {
  display: flex;
  align-items: center;
  gap: 1.5rem;
  background: white;
  border: 2px solid #E5E7EB;
  border-radius: 12px;
  padding: 2rem;
  margin: 2rem 0;
  transition: all 0.3s ease;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
}

.strava-auth-card.authenticated {
  background: #ECFDF5;
  border-color: #10B981;
}

.strava-auth-card.not-authenticated {
  background: #FEF3C7;
  border-color: #F59E0B;
}

.strava-auth-card.error {
  background: #FEF2F2;
  border-color: #EF4444;
}

.auth-status-indicator {
  flex-shrink: 0;
  width: 48px;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.status-spinner {
  width: 32px;
  height: 32px;
  border: 3px solid #E5E7EB;
  border-top: 3px solid #3B82F6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.status-icon {
  font-size: 2rem;
}

.auth-status-content h3 {
  margin: 0 0 0.5rem 0;
  font-size: 1.25rem;
  font-weight: 600;
  color: rgb(var(--color-foreground));
}

.auth-status-content p {
  margin: 0;
  color: rgba(var(--color-foreground), 0.75);
}

/* User Welcome Card */
.strava-user-card {
  display: flex;
  align-items: center;
  gap: 1.5rem;
  background: #F0F9FF;
  border: 2px solid #0EA5E9;
  border-radius: 12px;
  padding: 1.5rem;
  margin: 2rem 0;
}

.user-avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  overflow: hidden;
  flex-shrink: 0;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  background: #E5E7EB;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #6B7280;
}

.user-info h3 {
  margin: 0 0 0.5rem 0;
  color: #0C4A6E;
  font-size: 1.125rem;
  font-weight: 600;
}

.user-info p {
  margin: 0 0 0.5rem 0;
  color: #0C4A6E;
}

.user-details {
  font-size: 0.875rem;
  opacity: 0.8;
}

/* Actions Section */
.strava-actions {
  display: flex;
  justify-content: center;
  gap: 1rem;
  margin: 2.5rem 0;
  flex-wrap: wrap;
}

/* Progress Steps */
.strava-progress-steps {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  gap: 1rem;
  margin: 3rem 0;
}

.progress-step {
  display: flex;
  align-items: center;
  gap: 1rem;
  background: white;
  border: 2px solid #E5E7EB;
  border-radius: 8px;
  padding: 1.5rem;
  transition: all 0.3s ease;
}

.progress-step.active {
  border-color: #FC4C02;
  background: #FFF7ED;
}

.progress-step.completed {
  border-color: #10B981;
  background: #ECFDF5;
}

.step-number {
  width: 40px;
  height: 40px;
  background: #E5E7EB;
  color: #6B7280;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 1.125rem;
  flex-shrink: 0;
}

.progress-step.active .step-number {
  background: #FC4C02;
  color: white;
}

.progress-step.completed .step-number {
  background: #10B981;
  color: white;
}

.step-content {
  flex: 1;
}

.step-title {
  font-weight: 600;
  color: rgb(var(--color-foreground));
  margin-bottom: 0.25rem;
}

.step-description {
  font-size: 0.875rem;
  color: rgba(var(--color-foreground), 0.65);
}

/* Error Message */
.strava-error-message {
  display: flex;
  align-items: center;
  gap: 1rem;
  background: #FEF2F2;
  border: 2px solid #EF4444;
  border-radius: 8px;
  padding: 1.5rem;
  margin: 2rem 0;
}

.error-icon {
  font-size: 2rem;
  flex-shrink: 0;
}

.error-content h4 {
  margin: 0 0 0.5rem 0;
  color: #DC2626;
  font-weight: 600;
}

.error-content p {
  margin: 0;
  color: #DC2626;
}

/* Loading Overlay */
.strava-loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content {
  background: white;
  border-radius: 12px;
  padding: 2rem;
  text-align: center;
  max-width: 300px;
  width: 90%;
}

.loading-spinner-large {
  width: 48px;
  height: 48px;
  border: 4px solid #E5E7EB;
  border-top: 4px solid #3B82F6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 1rem auto;
}

.loading-content h4 {
  margin: 0 0 0.5rem 0;
  font-weight: 600;
}

.loading-content p {
  margin: 0;
  color: rgba(var(--color-foreground), 0.65);
  font-size: 0.875rem;
}

/* ==========================================================================
   Activity Selector Page Styles
   ========================================================================== */

.activity-selector-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 2rem 1rem;
}

.activity-selector-header {
  margin-bottom: 5rem;
}

/* User Info Bar */
.user-info-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #F9FAFB;
  border: 1px solid #E5E7EB;
  border-radius: 8px;
  padding: 1rem 1.5rem;
  margin: 1.5rem 0;
}

.user-info-left {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.user-avatar-small {
  width: 32px;
  height: 32px;
  background: #E5E7EB;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #6B7280;
}

/* Activity Controls */
.activity-controls {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 2rem;
  padding: 1.5rem;
  background: #F9FAFB;
  border: 1px solid #E5E7EB;
  border-radius: 8px;
}

.search-control {
  position: relative;
  flex: 1;
  min-width: 250px;
}

.activity-search-input {
  width: 100%;
  padding: 0.75rem 1rem 0.75rem 2.75rem;
  border: 1px solid #D1D5DB;
  border-radius: 6px;
  font-size: 1rem;
  background: white;
}

.activity-search-input:focus {
  outline: none;
  border-color: #3B82F6;
  box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.1);
}

.search-icon {
  position: absolute;
  left: 0.75rem;
  top: 50%;
  transform: translateY(-50%);
  color: #6B7280;
}

.filter-controls {
  display: flex;
  gap: 0.75rem;
  align-items: center;
  flex-wrap: wrap;
}

.activity-filter-select {
  padding: 0.75rem 1rem;
  border: 1px solid #D1D5DB;
  border-radius: 6px;
  background: white;
  font-size: 0.875rem;
  min-width: 120px;
}

.activity-filter-select:focus {
  outline: none;
  border-color: #3B82F6;
  box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.1);
}

/* Activities Grid */
.activities-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 2rem;
  margin-bottom: 2rem;
}

/* Activity Card */
.activity-card {
  background: white;
  border: 1px solid #E5E7EB;
  border-radius: 12px;
  overflow: hidden;
  transition: all 0.3s ease;
  cursor: pointer;
}

.activity-card:hover {
  border-color: #FC4C02;
  box-shadow: 0 8px 25px rgba(252, 76, 2, 0.15);
  transform: translateY(-2px);
}

.activity-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem 1.25rem 0.75rem;
  background: #F9FAFB;
  border-bottom: 1px solid #E5E7EB;
}

.activity-type {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-weight: 600;
  color: #374151;
  font-size: 0.875rem;
}

.activity-date {
  font-size: 0.75rem;
  color: #6B7280;
}

.activity-card-content {
  padding: 1.25rem;
}

.activity-name {
  margin: 0 0 1rem 0;
  font-size: 1.125rem;
  font-weight: 600;
  color: rgb(var(--color-foreground));
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* Activity Stats */
.activity-stats {
  display: flex;
  gap: 1rem;
  margin-bottom: 1rem;
}

.stat {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.stat-value {
  font-weight: 700;
  font-size: 1.125rem;
  color: rgb(var(--color-foreground));
  line-height: 1;
}

.stat-label {
  font-size: 0.75rem;
  color: rgba(var(--color-foreground), 0.6);
  text-transform: uppercase;
  letter-spacing: 0.5px;
  margin-top: 0.25rem;
}

/* Activity Preview Map */
.activity-preview-map {
  background: #F3F4F6;
  border: 1px solid #E5E7EB;
  border-radius: 6px;
  height: 80px;
  margin-bottom: 1rem;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.map-placeholder {
  font-size: 0.75rem;
  color: #6B7280;
  font-weight: 500;
}

.activity-card-actions {
  padding: 0 1.25rem 1.25rem;
}

.activity-select-btn {
  width: 100%;
}

/* Loading States */
.activities-loading {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 300px;
  text-align: center;
}

.activities-empty,
.activities-error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  min-height: 300px;
  padding: 2rem;
}

.empty-state-icon {
  color: #9CA3AF;
  margin-bottom: 1rem;
}

.activities-empty h3,
.activities-error h4 {
  margin: 0 0 0.5rem 0;
  color: rgb(var(--color-foreground));
}

.activities-empty p,
.activities-error p {
  margin: 0 0 1.5rem 0;
  color: rgba(var(--color-foreground), 0.65);
}

/* Pagination */
.activities-pagination {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1.5rem;
  background: #F9FAFB;
  border: 1px solid #E5E7EB;
  border-radius: 8px;
  margin: 2rem 0;
}

.pagination-info {
  font-size: 0.875rem;
  color: rgba(var(--color-foreground), 0.65);
}

/* Selection Info */
.selection-info {
  position: fixed;
  bottom: 2rem;
  left: 2rem;
  right: 2rem;
  background: white;
  border: 2px solid #10B981;
  border-radius: 12px;
  padding: 1.5rem;
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
  z-index: 1000;
}

.selection-content h4 {
  margin: 0 0 0.5rem 0;
  color: #047857;
  font-weight: 600;
}

.selection-content p {
  margin: 0 0 1rem 0;
  color: #047857;
  font-weight: 500;
}

.selection-actions {
  display: flex;
  gap: 1rem;
  align-items: center;
  flex-wrap: wrap;
}

/* ==========================================================================
   Animations
   ========================================================================== */

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}

/* ==========================================================================
   Responsive Design
   ========================================================================== */

/* Medium screens - 2 columns */
@media (min-width: 769px) and (max-width: 1199px) {
  .activities-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }
}

@media (max-width: 768px) {
  .strava-page-heading {
    font-size: 2rem;
  }

  .strava-auth-card,
  .strava-user-card {
    flex-direction: column;
    text-align: center;
    gap: 1rem;
  }

  .strava-progress-steps {
    grid-template-columns: 1fr;
  }

  .progress-step {
    padding: 1rem;
  }

  .activity-controls {
    flex-direction: column;
    align-items: stretch;
    gap: 1rem;
    padding: 1rem;
  }

  .search-control {
    min-width: auto;
    width: 100%;
  }

  .filter-controls {
    width: 100%;
    flex-direction: column;
    align-items: stretch;
  }

  .activity-filter-select {
    width: 100%;
    min-width: auto;
  }

  .activities-grid {
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  .user-info-bar {
    flex-direction: column;
    gap: 1rem;
    text-align: center;
  }

  .selection-info {
    position: relative;
    bottom: auto;
    left: auto;
    right: auto;
    margin: 2rem 0;
  }

  .selection-actions {
    justify-content: center;
  }

  /* Improve button touch targets on mobile */
  .strava-btn {
    min-height: 44px;
    padding: 0.875rem 1.25rem;
  }
}

@media (max-width: 480px) {
  .strava-login-container,
  .activity-selector-container {
    padding: 1rem 0.5rem;
  }
  
  .strava-btn-large {
    padding: 0.875rem 1.5rem;
    font-size: 1rem;
  }
  
  .activity-card {
    margin: 0 -0.5rem;
  }
  
  .activities-grid {
    gap: 1rem;
  }
}