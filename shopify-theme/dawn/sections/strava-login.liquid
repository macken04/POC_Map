     PRESERVE EXISTING JAVASCRIPT
     ============================================ -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  // Initialize Strava Login (PRESERVE EXISTING FUNCTIONALITY)
  const stravaLogin = new StravaLogin();
  stravaLogin.initSimple();

  // Progress Persistence - Update step indicator based on journey stage
  function updateProgressStep(step) {
    const steps = [
      'Step 1 of 4: Connect to Strava',
      'Step 2 of 4: Select Activity',
      'Step 3 of 4: Customize Map',
      'Step 4 of 4: Add to Cart'
    ];

    const progressIndicator = document.querySelector('.progress-indicator span');
    if (progressIndicator && steps[step - 1]) {
      progressIndicator.textContent = steps[step - 1];
      // Store progress in session storage
      sessionStorage.setItem('stravaMapProgress', step);
    }
  }

  // Restore progress on page load
  const savedProgress = sessionStorage.getItem('stravaMapProgress');
  if (savedProgress) {
    updateProgressStep(parseInt(savedProgress));
  }

  // FAQ Accordion functionality
  const faqItems = document.querySelectorAll('.faq-item');
  faqItems.forEach(item => {
    const question = item.querySelector('.faq-question');
    question.addEventListener('click', () => {
      const isActive = item.classList.contains('active');

      // Close all other FAQs
      faqItems.forEach(otherItem => {
        if (otherItem !== item) {
          otherItem.classList.remove('active');
          otherItem.querySelector('.faq-question').setAttribute('aria-expanded', 'false');
        }
      });

      // Toggle current FAQ
      item.classList.toggle('active');
      question.setAttribute('aria-expanded', !isActive);
    });
  });

  // Connect all CTA buttons to the same Strava auth function
  const heroBtn = document.getElementById('hero-connect-strava-btn');
  const finalBtn = document.getElementById('final-connect-strava-btn');
  const connectBtn = document.getElementById('connect-strava-btn');
  const retryBtn = document.getElementById('retry-connection-btn');

  [heroBtn, finalBtn, connectBtn, retryBtn].forEach(btn => {
    if (btn) {
      btn.addEventListener('click', () => {
        stravaLogin.connectStrava();
      });
    }
  });

  // Smooth scroll for "See Examples" link
  const examplesLinks = document.querySelectorAll('a[href="#examples"]');
  examplesLinks.forEach(link => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      const examplesSection = document.getElementById('examples');
      if (examplesSection) {
        examplesSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    });
  });

  // Export updateProgressStep for use by StravaLogin class
  window.updateProgressStep = updateProgressStep;
});
</script>

