{{ 'design-system.css' | asset_url | stylesheet_tag }}
{{ 'sportive-prints-page.css' | asset_url | stylesheet_tag }}

<div class="sportive-hero">
  <div class="sportive-hero-content">
    {%- if section.settings.eyebrow_text != blank -%}
      <span class="sportive-hero-eyebrow">
        {{ section.settings.eyebrow_text }}
      </span>
    {%- endif -%}

    {%- if section.settings.heading != blank -%}
      <h1 class="sportive-hero-heading">
        {{ section.settings.heading }}
      </h1>
    {%- endif -%}

    {%- if section.settings.description != blank -%}
      <p class="sportive-hero-description">
        {{ section.settings.description }}
      </p>
    {%- endif -%}

    {%- if section.settings.show_cta -%}
      <div class="sportive-hero-cta">
        {%- if section.settings.button_label_1 != blank -%}
          <a href="{{ section.settings.button_link_1 }}" class="sportive-hero-btn">
            {%- if section.settings.show_location_icon -%}
              <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M9 1.5C6.1 1.5 3.75 3.85 3.75 6.75C3.75 11.0625 9 16.5 9 16.5C9 16.5 14.25 11.0625 14.25 6.75C14.25 3.85 11.9 1.5 9 1.5ZM9 9C8.00544 9 7.05161 8.60491 6.34835 7.90165C5.64509 7.19839 5.25 6.24456 5.25 5.25C5.25 4.25544 5.64509 3.30161 6.34835 2.59835C7.05161 1.89509 8.00544 1.5 9 1.5C9.99456 1.5 10.9484 1.89509 11.6517 2.59835C12.3549 3.30161 12.75 4.25544 12.75 5.25C12.75 6.24456 12.3549 7.19839 11.6517 7.90165C10.9484 8.60491 9.99456 9 9 9Z" fill="currentColor"/>
              </svg>
            {%- endif -%}
            {{ section.settings.button_label_1 }}
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M7.5 15L12.5 10L7.5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        {%- endif -%}

        {%- if section.settings.button_label_2 != blank -%}
          <a href="{{ section.settings.button_link_2 }}" class="sportive-hero-btn sportive-hero-btn-secondary">
            {{ section.settings.button_label_2 }}
          </a>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- if section.settings.show_search -%}
      <div class="sportive-hero-search">
        <form action="{{ routes.search_url }}" method="get" role="search" class="sportive-search-form">
          <div class="sportive-search-input-wrapper">
            <svg class="sportive-search-icon" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M9 17A8 8 0 1 0 9 1a8 8 0 0 0 0 16zM19 19l-4.35-4.35" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <input
              type="search"
              name="q"
              class="sportive-search-input"
              placeholder="{{ section.settings.search_placeholder | default: 'Search for routes, climbs, or events...' }}"
              aria-label="Search"
            >
          </div>
        </form>
      </div>
    {%- endif -%}

    {%- if section.settings.show_trust_signal and section.settings.trust_signal_text != blank -%}
      <div style="margin-top: 2rem; display: flex; align-items: center; justify-content: center; gap: 0.5rem; color: #666; font-size: 0.875rem;">
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6.5 10.293l6.646-6.647a.5.5 0 0 1 .708 0z" fill="#10B981"/>
        </svg>
        <span>{{ section.settings.trust_signal_text }}</span>
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Sportive Hero",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow_text",
      "label": "Eyebrow text",
      "default": "Limited Edition",
      "info": "Small text above the heading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Iconic Cycling Routes & Events"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Celebrate the world's most legendary cycling routes with our professionally designed map prints. From Grand Tours to epic sportives."
    },
    {
      "type": "header",
      "content": "Call to Action"
    },
    {
      "type": "checkbox",
      "id": "show_cta",
      "label": "Show call to action buttons",
      "default": true
    },
    {
      "type": "text",
      "id": "button_label_1",
      "label": "Primary button label",
      "default": "Shop All Prints"
    },
    {
      "type": "url",
      "id": "button_link_1",
      "label": "Primary button link"
    },
    {
      "type": "checkbox",
      "id": "show_location_icon",
      "label": "Show location icon on primary button",
      "default": true
    },
    {
      "type": "text",
      "id": "button_label_2",
      "label": "Secondary button label",
      "default": "Browse Categories"
    },
    {
      "type": "url",
      "id": "button_link_2",
      "label": "Secondary button link"
    },
    {
      "type": "header",
      "content": "Search"
    },
    {
      "type": "checkbox",
      "id": "show_search",
      "label": "Show search bar",
      "default": true,
      "info": "Displays integrated search below CTAs"
    },
    {
      "type": "text",
      "id": "search_placeholder",
      "label": "Search placeholder text",
      "default": "Search for routes, climbs, or events..."
    },
    {
      "type": "header",
      "content": "Trust Signal"
    },
    {
      "type": "checkbox",
      "id": "show_trust_signal",
      "label": "Show trust signal",
      "default": true
    },
    {
      "type": "text",
      "id": "trust_signal_text",
      "label": "Trust signal text",
      "default": "Free shipping • Premium quality • 30-day guarantee"
    }
  ],
  "presets": [
    {
      "name": "Sportive Hero"
    }
  ]
}
{% endschema %}
