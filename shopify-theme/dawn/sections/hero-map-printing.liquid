{{ 'homepage-hero.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .hero-map-printing-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .hero-map-printing-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="hero-map-printing hero-map-printing-{{ section.id }} {% if section.settings.full_width %}hero-full-width{% endif %}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="hero-content-wrapper">
      <!-- Left Content Column -->
      <div class="hero-content">
        {% if section.settings.eyebrow_text != blank %}
          <div class="hero-eyebrow">
            <svg class="hero-eyebrow-icon" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
              <path d="M15.387 17.944l-2.089-4.116h-3.065L15.387 24l5.15-10.172h-3.066m-7.008-5.599l2.836 5.599h4.172L10.463 0l-7 13.828h4.172" />
            </svg>
            {{ section.settings.eyebrow_text }}
          </div>
        {% endif %}

        {% if section.settings.heading != blank %}
          <h1 class="hero-heading">
            {{ section.settings.heading | escape }}
          </h1>
        {% endif %}

        {% if section.settings.subheading != blank %}
          <p class="hero-subheading">
            {{ section.settings.subheading | escape }}
          </p>
        {% endif %}

        <!-- CTA Buttons -->
        <div class="hero-cta-group">
          {% if section.settings.button_label != blank %}
            <a href="{{ section.settings.button_link }}" class="hero-btn hero-btn-primary">
              <svg class="hero-btn-icon" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M15.387 17.944l-2.089-4.116h-3.065L15.387 24l5.15-10.172h-3.066m-7.008-5.599l2.836 5.599h4.172L10.463 0l-7 13.828h4.172" />
              </svg>
              {{ section.settings.button_label }}
            </a>
          {% endif %}

          {% if section.settings.button_label_2 != blank %}
            <a href="{{ section.settings.button_link_2 }}" class="hero-btn hero-btn-secondary">
              {{ section.settings.button_label_2 }}
              <svg class="hero-btn-icon-right" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="9,18 15,12 9,6"/>
              </svg>
            </a>
          {% endif %}
        </div>

        <!-- Social Proof / Trust Signals -->
        {% if section.settings.show_social_proof %}
          <div class="hero-social-proof">
            <div class="social-proof-avatars">
              <div class="avatar-circle"></div>
              <div class="avatar-circle"></div>
              <div class="avatar-circle"></div>
              <div class="avatar-circle"></div>
            </div>
            <div class="social-proof-text">
              <div class="social-proof-rating">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" class="star-icon">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
                <span class="rating-text">4.9/5</span>
              </div>
              <p class="social-proof-desc">{{ section.settings.social_proof_text | default: "Loved by 12,000+ cyclists worldwide" }}</p>
            </div>
          </div>
        {% endif %}
      </div>

      <!-- Right Image/Visual Column -->
      {% if section.settings.image != blank or section.settings.show_example_preview %}
        <div class="hero-visual">
          {% if section.settings.image != blank %}
            <div class="hero-image-wrapper">
              {{
                section.settings.image
                | image_url: width: 1200
                | image_tag: class: 'hero-image', loading: 'eager', alt: section.settings.heading
              }}
            </div>
          {% else %}
            <!-- Placeholder for example map preview -->
            <div class="hero-example-preview">
              <div class="example-poster-frame">
                <div class="example-poster-content">
                  <!-- Placeholder map visualization -->
                  <svg class="placeholder-map" viewBox="0 0 400 600" fill="none">
                    <rect width="400" height="600" fill="#f5f5f5"/>
                    <path d="M50,300 Q100,200 150,250 T250,300 T350,250" stroke="#FC4C02" stroke-width="4" fill="none"/>
                    <circle cx="50" cy="300" r="6" fill="#FC4C02"/>
                    <circle cx="350" cy="250" r="6" fill="#FC4C02"/>
                  </svg>
                  <div class="poster-overlay-text">
                    <h3>EPIC RIDE</h3>
                    <p>Summer 2024 â€¢ 53.3km</p>
                  </div>
                </div>
              </div>
            </div>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero - Map Printing",
  "tag": "section",
  "class": "section hero-section",
  "settings": [
    {
      "type": "header",
      "content": "Hero Content"
    },
    {
      "type": "text",
      "id": "eyebrow_text",
      "label": "Eyebrow Text",
      "default": "Powered by Strava"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Turn Your Rides Into Beautiful Art"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Transform your Strava cycling routes into stunning, high-quality map posters. Perfect for remembering your favorite rides and epic adventures."
    },
    {
      "type": "header",
      "content": "Call to Action"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Primary Button Label",
      "default": "Connect with Strava"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Primary Button Link"
    },
    {
      "type": "text",
      "id": "button_label_2",
      "label": "Secondary Button Label",
      "default": "See Examples"
    },
    {
      "type": "url",
      "id": "button_link_2",
      "label": "Secondary Button Link"
    },
    {
      "type": "header",
      "content": "Hero Visual"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image"
    },
    {
      "type": "checkbox",
      "id": "show_example_preview",
      "label": "Show Example Preview",
      "default": true,
      "info": "Show placeholder map preview if no image is uploaded"
    },
    {
      "type": "header",
      "content": "Social Proof"
    },
    {
      "type": "checkbox",
      "id": "show_social_proof",
      "label": "Show Social Proof",
      "default": true
    },
    {
      "type": "text",
      "id": "social_proof_text",
      "label": "Social Proof Text",
      "default": "Loved by 12,000+ cyclists worldwide"
    },
    {
      "type": "header",
      "content": "Layout Settings"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width",
      "default": false
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 8,
      "unit": "px",
      "label": "Top Padding",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 8,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "Hero - Map Printing",
      "category": "Custom"
    }
  ]
}
{% endschema %}
