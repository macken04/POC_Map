{{ 'design-system.css' | asset_url | stylesheet_tag }}
{{ 'sportive-prints-page.css' | asset_url | stylesheet_tag }}

<div class="sportive-features">
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <div class="sportive-features-header">
        <h2 class="sportive-features-heading">
          {{ section.settings.heading }}
        </h2>
      </div>
    {%- endif -%}

    <div class="sportive-features-grid">
      {%- for block in section.blocks -%}
        <div class="sportive-feature-card" {{ block.shopify_attributes }}>
          <div class="sportive-feature-icon">
            {%- case block.settings.icon -%}
              {%- when 'quality' -%}
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              {%- when 'sizes' -%}
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <rect x="3" y="3" width="7" height="7" rx="1" stroke="currentColor" stroke-width="2"/>
                  <rect x="14" y="3" width="7" height="7" rx="1" stroke="currentColor" stroke-width="2"/>
                  <rect x="14" y="14" width="7" height="7" rx="1" stroke="currentColor" stroke-width="2"/>
                  <rect x="3" y="14" width="7" height="7" rx="1" stroke="currentColor" stroke-width="2"/>
                </svg>
              {%- when 'framing' -%}
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <rect x="3" y="3" width="18" height="18" rx="2" stroke="currentColor" stroke-width="2"/>
                  <rect x="7" y="7" width="10" height="10" rx="1" stroke="currentColor" stroke-width="2"/>
                </svg>
              {%- when 'shipping' -%}
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M1 3H16V16H1V3Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
                  <path d="M16 8H20L23 11V16H16V8Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
                  <circle cx="5.5" cy="18.5" r="2.5" stroke="currentColor" stroke-width="2"/>
                  <circle cx="18.5" cy="18.5" r="2.5" stroke="currentColor" stroke-width="2"/>
                </svg>
              {%- when 'guarantee' -%}
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z" stroke="currentColor" stroke-width="2"/>
                  <path d="M9 12L11 14L15 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              {%- when 'support' -%}
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                  <path d="M12 16V12M12 8H12.01" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                </svg>
              {%- else -%}
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            {%- endcase -%}
          </div>

          <h3 class="sportive-feature-title">{{ block.settings.title }}</h3>

          {%- if block.settings.description != blank -%}
            <p class="sportive-feature-description">
              {{ block.settings.description }}
            </p>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Sportive Features",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why Choose Our Prints"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "quality", "label": "Quality (Star)" },
            { "value": "sizes", "label": "Sizes (Grid)" },
            { "value": "framing", "label": "Framing (Frame)" },
            { "value": "shipping", "label": "Shipping (Truck)" },
            { "value": "guarantee", "label": "Guarantee (Check)" },
            { "value": "support", "label": "Support (Info)" }
          ],
          "default": "quality"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Feature title",
          "default": "Premium Quality"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Feature description",
          "default": "Museum-grade archival paper with professional printing for lasting quality."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Sportive Features",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "icon": "quality",
            "title": "Premium Quality",
            "description": "Museum-grade archival paper with professional printing for lasting quality."
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "sizes",
            "title": "Multiple Sizes",
            "description": "Available in A4, A3, and A2 sizes to suit any space."
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "framing",
            "title": "Framing Options",
            "description": "Choose from unframed or select black, white, or oak frames."
          }
        }
      ]
    }
  ]
}
{% endschema %}
