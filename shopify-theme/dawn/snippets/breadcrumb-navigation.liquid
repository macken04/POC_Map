{% comment %}
  Breadcrumb navigation for map creation flow
  @param breadcrumb_type [String] - Type: 'map-design', 'map-preview', 'activities'
{% endcomment %}

<style>
.breadcrumb-navigation {
  /* Force full viewport width using vw and negative margins */
  width: 100vw;
  margin-left: calc(-50vw + 50%);
  margin-right: calc(-50vw + 50%);
  padding: 0.5rem 0;
  background: rgba(248, 248, 248, 0.95);
  border-bottom: 1px solid #e0e0e0;
  max-width: none !important;
}

.breadcrumb-wrapper {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 0.5rem;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 2rem;
}

.breadcrumb-item {
  color: #64748B;
  font-size: 0.875rem;
  text-decoration: none;
  transition: color 0.2s ease;
}

.breadcrumb-item:hover:not(.breadcrumb-current) {
  color: #FC4C02; /* Strava orange */
}

.breadcrumb-current {
  color: #0F172A;
  font-weight: 500;
}

.breadcrumb-separator {
  color: #CBD5E1;
  user-select: none;
}

@media screen and (max-width: 750px) {
  .breadcrumb-navigation {
    padding: 0.375rem 1rem;
  }

  .breadcrumb-item {
    font-size: 0.8125rem;
  }
}
</style>

<nav class="breadcrumb-navigation" aria-label="Breadcrumb">
  <div class="breadcrumb-wrapper">
    {% case breadcrumb_type %}
      {% when 'map-design' %}
        <a href="/" class="breadcrumb-item">Home</a>
        <span class="breadcrumb-separator">›</span>
        <a href="/pages/strava-activities" class="breadcrumb-item">My Activities</a>
        <span class="breadcrumb-separator">›</span>
        <span class="breadcrumb-item breadcrumb-current" aria-current="page">Design Your Map</span>

      {% when 'map-preview' %}
        <a href="/" class="breadcrumb-item">Home</a>
        <span class="breadcrumb-separator">›</span>
        <a href="/pages/strava-activities" class="breadcrumb-item">My Activities</a>
        <span class="breadcrumb-separator">›</span>
        <a href="/pages/map-design" class="breadcrumb-item">Design</a>
        <span class="breadcrumb-separator">›</span>
        <span class="breadcrumb-item breadcrumb-current" aria-current="page">Preview & Order</span>

      {% when 'activities' %}
        <a href="/" class="breadcrumb-item">Home</a>
        <span class="breadcrumb-separator">›</span>
        <span class="breadcrumb-item breadcrumb-current" aria-current="page">My Activities</span>
    {% endcase %}
  </div>
</nav>
